<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dynamic Form Fields</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #014b95;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }
        .form-container {
            background: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 6px 6px rgba(18, 19, 18, 0.799);
            width: 100%;
            max-width: 600px;
        }
        .field-group {
            margin-bottom: 10px;
        }
    </style>
</head>
<body>
    <div class="form-container">
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Email Sent SuccessFully</strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        
        <form action="/" method="post">
            <div id="email-container" class="mb-3">
                <h3 class="mb-3">Emails:</h3>
                <div class="field-group input-group mb-2">
                    <input type="email" class="form-control" placeholder="Enter email" name="emails[]">
                </div>
            </div>
            <button type="button" class="btn btn-outline-primary mb-3" onclick="addField('email-container', 'emails[]', 'Enter email')">Add Email</button>

            <div id="subject-container" class="mb-3">
                <h3 class="mb-3">Subjects:</h3>
                <div class="field-group input-group mb-2">
                    <input type="text" class="form-control" placeholder="Enter subject" name="subjects[]">
                </div>
            </div>
            <button type="button" class="btn btn-outline-primary mb-3" onclick="addField('subject-container', 'subjects[]', 'Enter subject')">Add Subject</button>

            <div id="message-container" class="mb-3">
                <h3 class="mb-3">Messages:</h3>
                <div class="field-group input-group mb-2">
                    <input type="text" class="form-control" placeholder="Enter message" name="messages[]">
                </div>
            </div>
            <button type="button" class="btn btn-outline-primary mb-3" onclick="addField('message-container', 'messages[]', 'Enter message')">Add Message</button>

            <button type="submit" class="btn btn-primary w-100">Submit</button>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <script>
        function addField(containerId, name, placeholder) {
            const container = document.getElementById(containerId);
            const div = document.createElement('div');
            div.classList.add('field-group', 'input-group', 'mb-2');
            div.innerHTML = `
                <input type="text" class="form-control" placeholder="${placeholder}" name="${name}">
                <button type="button" class="btn btn-danger ms-2" onclick="removeField(this)">Remove</button>
            `;
            container.appendChild(div);
        }

        function removeField(button) {
            button.parentElement.remove();
        }
    </script>
</body>
</html>
